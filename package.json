{
  "disabled": [
    "packages/benchmarks/styletron/css",
    "packages/benchmarks/styletron/themed"
  ],
  "workspaces": [
    "packages/tests",
    "packages/benchmarks-utils",
    "packages/dev-tasks",
    "packages/benchmarks/react",
    "packages/benchmarks/react-inline-styles",
    "packages/benchmarks/react-css",
    "packages/benchmarks/emotion/simple",
    "packages/benchmarks/emotion/css-mode",
    "packages/benchmarks/emotion/extract-static",
    "packages/benchmarks/styled-components/simple",
    "packages/benchmarks/styled-components/decouple-cell",
    "packages/benchmarks/styled-components/inline-style",
    "packages/benchmarks/styled-components/themed",
    "packages/benchmarks/styletron/simple"
  ],
  "private": true,
  "devDependencies": {
    "husky": "0.13.3",
    "lerna": "3.20.2",
    "lint-staged": "3.4.0",
    "prettier": "1.2.2",
    "unorepo": "0.0.28"
  },
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "benchmark": "node ./packages/tests/",
    "format": "find . -name '*.js' | grep -v node_modules | xargs prettier --trailing-comma es5 --single-quote --write",
    "precommit": "lint-staged",
    "build": "uno bootstrap && lerna run build",
    "lerna": "lerna"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  }
}
